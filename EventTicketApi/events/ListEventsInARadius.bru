meta {
  name: ListEventsInARadius
  type: http
  seq: 5
}

get {
  url: http://localhost:8082/api/recommendations/nearest-events?event_id={{eventId}}&radius=10.0
  body: none
  auth: inherit
}

params:query {
  event_id: {{eventId}}
  radius: 10.0
}

script:pre-request {
  const cookie = bru.getVar("cookie");
  
  if(cookie) {
    req.setHeader("Cookie", cookie)
  }
}
