meta {
  name: Emit Ticket
  type: http
  seq: 1
}

post {
  url: http://localhost:8081/booking/api/tickets
  body: json
  auth: inherit
}

body:json {
  {
    "eventId": "{{eventId}}",
    "ticketCategoryId": 4
  }
  
}

vars:post-response {
  ticketId: res.body.ticketId
  ticketCategoryId: res.body.ticketCategoryId
}

script:pre-request {
  const cookie = bru.getVar("cookie");
  
  if(cookie) {
    req.setHeader("Cookie", cookie)
  }
}
